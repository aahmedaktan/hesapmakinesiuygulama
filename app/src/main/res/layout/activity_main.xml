<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:gravity="center"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="right"
        android:hint="0"
        android:textStyle="bold"
        android:textSize="70dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bir"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#2445A9"
                android:onClick="sayisec"
                android:text="1"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/iki"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:backgroundTint="#2445A9"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:text="2"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/uc"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:backgroundTint="#2445A9"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:text="3"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/bolme"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#EF093B"
                android:onClick="islem"
                android:text="/"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/dort"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="4"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/bes"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="5"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/alti"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="6"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/carpma"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#EF093B"
                android:onClick="islem"
                android:text="*"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/yedi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="7"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/sekiz"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="8"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/dokuz"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="9"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/toplama"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#EF093B"
                android:onClick="islem"
                android:text="+"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#2BBC0E"
                android:onClick="ac"
                android:text="AC"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/sifir"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="sayisec"
                android:backgroundTint="#2445A9"
                android:text="0"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#24A99C"
                android:onClick="esittir"
                android:text="="
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/cÄ±karma"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#EF093B"
                android:onClick="islem"
                android:text="-"
                android:textSize="40dp"
                app:cornerRadius="15dp"
                app:strokeColor="#0E0E0F"
                app:strokeWidth="2dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>